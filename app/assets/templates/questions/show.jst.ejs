<div class="question-show-head">
  <span class="label label-default question-label"><%= question.escape('title') %></span>
  <div class='timer question-timer'></div>
</div> 

<div class="chart"></div>


<ul class="answers list-group"></ul>


<% if (window.currentUser) { %>
  <button type="button" class="btn btn-default btn-lg" id='submit-vote'>
    <span class="glyphicon glyphicon-pencil"></span> Vote!
  </button>
  
  <button type="button" class="btn btn-default btn-lg" 
  id='create-answer'
  data-toggle='modal' data-target='#answerModal'>
    <span class="glyphicon glyphicon-tag"></span> Create Answer
  </button>
<% } %>

<div class="modal fade" id="answerModal" tabindex="-1" role="dialog" aria-labelledby="answerModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="answerModalLabel">Custom Answer</h4>
      </div>
      <div class="modal-body">
        <div class="col-sm-10">
          <input type="text" class="form-control" id="answer"
          placeholder="Answer" name="answers[answer]">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary create-answer">Save changes</button>
      </div>
    </div>
  </div>
</div>



